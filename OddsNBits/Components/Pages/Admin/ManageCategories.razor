    <ActionButtons>
        <HxButton Color="ThemeColor.Primary" CssClass="btn-sm" OnClick="() => _category = new()"><HxIcon Icon="BootstrapIcon.PlusCircle" /> New Category</HxButton>
    </ActionButtons>
</DashboardHeader>

